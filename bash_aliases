# handy ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# text editor aliasing
alias vim='vim -O'
alias vi='vim'
alias emacs='emacs -nw'

# miscellaneous
alias rm='rm -i'
alias opn='xdg-open 2> /dev/null'
alias texclean='rm -f *.aux *.log *.bbl *.blg'

# filesystem navigation
alias hub='cd ~/Documents/hub'
alias motmot='cd ~/Documents/git/motmot'
alias skym='ssh skym -t "screen -UxRR"'
