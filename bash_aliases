# handy ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# text editor aliasing
alias vim='vim -O'
alias vi='vim'
alias emacs='emacs -nw'

# miscellaneous
alias rm='rm -i'
alias opn='xdg-open 2> /dev/null'
alias texclean='rm -f *.aux *.log; rm *.pdf'

# ssh targets
alias sshnice='ssh maxwang@nice.fas.harvard.edu'
alias sshseas='ssh maxwang@login.seas.harvard.edu'
alias sshhub='ssh hub@hcs.harvard.edu'

# filesystem navigation
alias hub='cd ~/Documents/hub'
