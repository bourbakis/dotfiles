[user]
  name = Max Wang
  email = mxawng@gmail.com

[alias]
  a = add
  aa = add -A
  br = branch
  cm = commit
  ci = commit -a
  ca = commit --amend
  caa = commit -a --amend
  cp = cherry-pick
  co = checkout
  d = diff
  dc = diff --cached
  dw = diff --ignore-space-change
  drop = stash drop
  fixup = "!f() { git -c core.editor=true rebase -q -i $1 --exec \
           'git reset --soft -q HEAD^; git caa --no-edit -q'; }; f"
  l = log
  list = stash list
  mkbr = "!f() { git checkout -b $1; }; f"
  mvbr = branch -m
  peek = show stash@{0}
  pop = stash pop
  s = status
  sh = show
  sw = show --ignore-space-change
  st = stash
  sup = "!f() { git stash && git up && git pop; }; f"
  rmbr = branch -D
  up = pull --rebase
  w = whatchanged

[color]
  diff = auto
  branch = auto
  status = auto
  interactive = auto
  ui = auto
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = blue
  frag = cyan
  old = red
  new = green
  whitespace = red blink

[color "status"]
  added = yellow
  changed = green
  untracked = red

[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix
[branch]
  autosetupmerge = true
[diff]
  renames = copies
  mnemonicprefix = true
[log]
  date = local
[merge]
  stat = true
[push]
  default = tracking
[rerere]
  enabled = true
