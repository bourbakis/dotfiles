[ui]
username = Max Wang <mxawng@gmail.com>
style = ~/.hgrc.d/git-style.hg

[alias]
apc = record  # add -p; commit
bm = bookmark
bma = bookmark --all
base = log -T '{node}\n' -r 'ancestor(.,master)'
ci = commit
caa = commit --amend
co = update
cp = graft
d = diff
dw = diff --ignore-space-change
info = !$HG summary && $HG status
l = log
restack = histedit -r 'last(first(ancestor(.,master)::., 2))'
s = status
show = show -g
up = !$HG pull && $HG rebase -d master
whatchanged = !$HG log --style ~/.hgrc.d/whatchanged.hg
w = whatchanged

# git                 | hg
#---------------------+----------------------
# checkout <h>        | update <h>
# checkout .          | revert -a
#                     | update --clean -r .
# checkout <h> -- <f> | revert -r <h> <f>
# reset HEAD^         | reset .^
# revert              | backout
# add -p; commit      | record

[diff]
git = True

[color]
diff.diffline = blue
diff.extended = blue
diff.file_a = blue
diff.file_b = blue
diff.hunk = cyan
diff.deleted = red
diff.inserted = green

[color]
status.modified = yellow
status.added = green
status.removed = yellow
status.deleted = red
status.unknown = red

[hooks]
pre-merge.fail =
